<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KW2309MAUI.MainPage">

    <Label
        Text="Gra w kości. Autor: 00000000000"
        BackgroundColor="Brown"
        TextColor="White"
        FontSize="Title"
        Padding="5"/>

    <StackLayout Padding="30">
        <Label x:Name="RollResultLabel" Text="Wynik tego losowania: 0" FontSize="24" />
        <Label x:Name="GameResultLabel" Text="Wynik gry: 0" FontSize="24" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Image x:Name="dice_0" Source="k6_0.png" WidthRequest="100" HeightRequest="100" />
            <Image x:Name="dice_1" Source="k6_0.png" WidthRequest="100" HeightRequest="100" />
            <Image x:Name="dice_2" Source="k6_0.png" WidthRequest="100" HeightRequest="100" />
            <Image x:Name="dice_3" Source="k6_0.png" WidthRequest="100" HeightRequest="100" />
            <Image x:Name="dice_4" Source="k6_0.png" WidthRequest="100" HeightRequest="100" />
        </StackLayout>

        <Button Text="Rzuć kośćmi" Clicked="DiceRoll" />
        <Button Text="Reset gry" Clicked="ResetGame" />
    </StackLayout>
</ContentPage>